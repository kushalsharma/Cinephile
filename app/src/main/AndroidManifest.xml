<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.kushalsharma.cinephile">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="in.kushalsharma.utils.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FavouriteMovieDetailActivity"
            android:label="@string/title_activity_movie_detail" />

        <activity
            android:name=".MovieDetailActivity"
            android:label="@string/title_activity_movie_detail" />

        <provider
            android:name="in.kushalsharma.utils.MoviesContentProvider"
            android:authorities="in.kushalsharma.cinephile.provider"
            android:exported="true" />

    </application>

</manifest>

